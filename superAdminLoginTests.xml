<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Super Admin Login Tests Suite" parallel="methods" thread-count="3">
    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Super Admin Login Tests" parallel="methods" thread-count="3">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.TC001_SuperAdminLogin">
                <methods>
                    <include name="superAdminLoginWithValidCredentials"/>
                    <include name="loginWithInvalidUsername"/>
                    <include name="loginWithInvalidPassword"/>
                </methods>
            </class>
        </classes>
    </test>
</suite> 